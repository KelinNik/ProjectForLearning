<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <preConditions>
        <runningAs username="u17768012"/>
    </preConditions>

    <changeSet id="1" author="Nick">
        <createTable tableName="accountModel">
            <column name="account_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="first_name" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(128)"/>
            <column name="is_active" type="bool"/>
        </createTable>
        <createIndex tableName="accountModel" indexName="account_index">
            <column name="account_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>